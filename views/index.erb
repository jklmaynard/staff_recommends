<h1>The Wallace Books Staff Recommends Page!</h1>

<form action="/employee" method="post">
  <label for="name">Employee Name</label>
  <input id="name" name="name" type="text">
  
  <button type="submit" class="btn btn-sm btn-primary">Add Employee</button>
</form>

<ul>
  <% @employees.each() do |employee| %>
    <li style="margin: 5px auto;">
      <a href="/employees/<%= employee.id()%>"><button type="submit" class="btn btn-sm btn-primary">Add Books</button></a>
      <%= employee.employee() %>
    </li>
  <% end %>
</ul>

<h2> . . . Or . . . </h2>

<h3> Go to the Books! </h3>
<form action="/add_books" method="post">
  <label for="name">Title</label>
  <input type="text" name="name" id="name">
  <label for="author">Author</label>
  <input type="text" name="author" id="author">
  <button type="submit" class="btn btn-sm bltn-primary">Add Book!</button>
</form>

<ul>
  <% @books.each() do |book| %>
  <li style="margin: 5px auto;">
    <a href="/books/<%= book.id() %>"><button type = "submit" class="btn btn-sm btn-success">Edit</button></a>
    <%= book.name() %>
  </li>
  <% end %>
</ul>