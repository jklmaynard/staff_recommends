<h1> <%= @book.name() %> </h1>
<h2> <%= @book.author() %></h2>
<h3> Edit Book </h3>

<form action="/books/edit/<%= @book.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="publisher">Publisher (Optional)</label>
  <input id="publisher" name="publisher" type="text">
  <label for="copyright">Copyright (Optional)</label>
  <input id="copyright" name="copyright" type="text">
 

<h3> Which of Your Staff Recommends This Book?</h3>

      <% @employees.each() do |employee| %>
        <div class="checkbox">
        <input type="checkbox" name="employee_ids[]" value="<%= employee.id() %>"><%= employee.employee() %>    
        </div>
      <% end %>
    <button type="submit">Update</button>
</form><br>
<p> Not the staff you're looking for? Go <a href="/"> back </a> to add a staff member.</p>
<br>

<h3> Add a Genre to the Book </h3>
<form action="/books/add_genre/<%= @book.id() %>" method="post">
   <% @genres.each() do |genre| %>
    <div class="checkbox">
    <input type="checkbox" name="genre_ids[]" value="<%= genre.id()%>"><%= genre.genre() %>
    </div>
  <% end %>
  <button type="submit">Add Genre</button>
</form>
<br>


<a href="/books/<%= @book.id() %>">Back</a>