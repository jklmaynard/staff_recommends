<div class="container" style="background-color: #ffffcc; margin: 75px auto; max-width: 60%;">
  <h1><%= @employee.employee() %>, Add a Comment!</h1>

    <form action="/comments/<%= @employee.id() %>" method="post">
      <label for="book_id">Select a Book</label><br>
      <select id="book_id" name="book_id" type="text">
        <% @employee.books().order("name").each() do |book| %>
        <option value="<%= book.id() %>"> <%= book.name() %></option>
        <% end %>
      </select><br>
      <label for="comment">Type your Comment Here</label>
        <textarea name="comment" rows="5" id="comment" class="form-control"></textarea><br>
        <input name="employee_id" type="hidden" value="<%= @employee.id() %>">
      <button type="submit" class="btn btn-sm btn-success">Add a Comment!</button>
  </form><br>

  <a href="/employees/<%= @employee.id() %>"><button type="submit" class="btn btn-sm btn-primary" style="margin: 0 0 25px 0;">Back</button></a>
</div>